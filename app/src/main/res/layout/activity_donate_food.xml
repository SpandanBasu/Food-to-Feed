<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonateFoodActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Donation"
        android:textSize="32sp"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollFeed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/centre_background"
        android:focusableInTouchMode="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.cardview.widget.CardView
            android:id="@+id/personalDetailsCard"
            style="@style/centreLocatorCardDesign"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:focusableInTouchMode="false"
                android:orientation="vertical"
                android:padding="20dp">


                <EditText
                    android:id="@+id/txtName"
                    style="@style/modifiedEditText"
                    android:hint="Name"
                    android:fontFamily="@font/poppins_regular"
                    android:singleLine="true" />


                <EditText
                    android:id="@+id/txtAddress"
                    style="@style/modifiedEditText"
                    android:ems="10"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Address"
                    android:maxLines="3"
                    android:inputType="textMultiLine" />

                <EditText
                    android:id="@+id/txtLandmark"
                    style="@style/modifiedEditText"
                    android:ems="10"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Lankmark"
                    android:maxLines="1"
                    android:inputType="text" />


                <EditText
                    android:id="@+id/txtMob"
                    style="@style/modifiedEditText"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Mob no"
                    android:inputType="phone" />


                <EditText
                    android:id="@+id/txtFeed"
                    style="@style/modifiedEditText"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Food will serve"
                    android:inputType="numberDecimal"

                    android:minLines="1" />


                <Button
                    android:layout_marginTop="16dp"
                    android:id="@+id/btnSend"
                    android:layout_width="100dp"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/button_back_circular_yellow"
                    android:text="Send"
                    android:textColor="@color/white" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </androidx.core.widget.NestedScrollView>
</RelativeLayout>